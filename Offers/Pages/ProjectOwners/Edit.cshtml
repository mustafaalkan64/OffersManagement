@page
@using global::Pages.ProjectOwner
@model EditModel
@{
    ViewData["Title"] = "Proje Sahibi Düzenle";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    var statusClass = Model.StatusMessage.StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusClass alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectOwner.Id" />

            <div class="form-group mb-3">
                <label asp-for="ProjectOwner.Name" class="control-label"></label>
                <input asp-for="ProjectOwner.Name" class="form-control" />
                <span asp-validation-for="ProjectOwner.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProjectOwner.IdentityNo" class="control-label"></label>
                <input asp-for="ProjectOwner.IdentityNo" class="form-control" />
                <span asp-validation-for="ProjectOwner.IdentityNo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProjectOwner.Telephone" class="control-label"></label>
                <input asp-for="ProjectOwner.Telephone" class="form-control" />
                <span asp-validation-for="ProjectOwner.Telephone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProjectOwner.Address" class="control-label"></label>
                <textarea asp-for="ProjectOwner.Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProjectOwner.Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProjectOwner.Traktor" class="control-label"></label>
                <input asp-for="ProjectOwner.Traktor" class="form-control" />
                <span asp-validation-for="ProjectOwner.Traktor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProjectOwner.Hp" class="control-label"></label>
                <input type="number" asp-for="ProjectOwner.Hp" class="form-control" />
                <span asp-validation-for="ProjectOwner.Hp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-page="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 