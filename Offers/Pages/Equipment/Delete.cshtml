@page
@model DeleteModel
@{
    if (ViewData != null)
    {
        ViewData["Title"] = "Delete Equipment";
    }
}

<h1>Delete Equipment</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this equipment?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Equipment.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Equipment.Description</dd>
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Equipment.Brand</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Equipment.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 