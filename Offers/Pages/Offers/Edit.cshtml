@page
@using global::Pages.Offers
@model EditModel
@{
    ViewData["Title"] = "Edit Offer";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <input type="hidden" asp-for="Offer.Id" />
            <input type="hidden" asp-for="Offer.CreatedDate" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Offer.OfferName"></label>
                        <input asp-for="Offer.OfferName" class="form-control" />
                        <span asp-validation-for="Offer.OfferName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Offer Items</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <select asp-for="NewItem.EquipmentModelId" asp-items="Model.EquipmentModelList" class="form-select">
                            </select>
                            <span asp-validation-for="NewItem.EquipmentModelId" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <select asp-for="NewItem.CompanyId" asp-items="Model.CompanyList" class="form-select">
                            </select>
                            <span asp-validation-for="NewItem.CompanyId" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <input asp-for="NewItem.Quantity" class="form-control" value="1" placeholder="Quantity" />
                            <span asp-validation-for="NewItem.Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <input asp-for="NewItem.Price" class="form-control" value="100" placeholder="Price" />
                            <span asp-validation-for="NewItem.Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" asp-page-handler="AddItem" class="btn btn-primary">Add Item</button>
                        </div>
                    </div>

                    @if (Model.OfferItems.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Equipment</th>
                                    <th>Company</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OfferItems)
                                {
                                    <tr>
                                        <td>@item.EquipmentModel.Equipment.Name - @item.EquipmentModel.Brand @item.EquipmentModel.Model</td>
                                        <td>@item.Company.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                        <td>
                                            <button type="submit"
                                                    asp-page-handler="DeleteItem"
                                                    asp-route-itemId="@item.Id"
                                                    class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this item?')">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>@Model.Offer.TotalPrice.ToString("C")</strong></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" asp-page-handler="Save" class="btn btn-primary">Save Changes</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}