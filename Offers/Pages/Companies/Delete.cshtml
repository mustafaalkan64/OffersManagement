@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Company";
}

<h1>Delete Company</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this company?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Company.Name)</dt>
        <dd class="col-sm-10">@Model.Company.Name</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Company.CreatedDate)</dt>
        <dd class="col-sm-10">@Model.Company.CreatedDate.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Company.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 