@page
@using global::Pages.EquipmentModelPage
@model IndexModel
@{
    ViewData["Title"] = "Equipment Models";
}

<h1>Equipment Models</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Equipment Model</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Equipment</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EquipmentModels)
        {
            <tr>
                <td>@item.Equipment.Name</td>
                <td>@item.Brand</td>
                <td>@item.Model</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 