@* Add this after your existing customer form fields *@
<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0">Equipment Models</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <select asp-for="NewEquipmentModelId" asp-items="Model.EquipmentModelList" class="form-select">
                    <option value="">Select Equipment Model</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" asp-page-handler="AddEquipmentModel" class="btn btn-primary">Add Equipment</button>
            </div>
        </div>

        @if (Model.SelectedEquipmentModels.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Equipment</th>
                        <th>Brand</th>
                        <th>Model</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SelectedEquipmentModels)
                    {
                        <tr>
                            <td>@item.Equipment.Name</td>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>
                                <button type="submit" 
                                        asp-page-handler="RemoveEquipmentModel" 
                                        asp-route-equipmentModelId="@item.Id"
                                        class="btn btn-danger btn-sm">
                                    Remove
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div> 