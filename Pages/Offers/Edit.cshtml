@page
@model EditModel
@{
    ViewData["Title"] = Model.Offer?.Id > 0 ? "Edit Offer" : "Create Offer";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            @if (Model.Offer?.Id > 0)
            {
                <input type="hidden" asp-for="Offer.Id" />
                <input type="hidden" asp-for="Offer.CreatedDate" />
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Offer.OfferName"></label>
                        <input asp-for="Offer.OfferName" class="form-control" />
                        <span asp-validation-for="Offer.OfferName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @if (Model.Offer?.Id > 0)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Offer Items</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <select asp-for="NewItem.EquipmentId" asp-items="Model.EquipmentList" class="form-select">
                                    <option value="">Select Equipment</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select asp-for="NewItem.CompanyId" asp-items="Model.CompanyList" class="form-select">
                                    <option value="">Select Company</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input asp-for="NewItem.Quantity" class="form-control" placeholder="Quantity" />
                            </div>
                            <div class="col-md-2">
                                <input asp-for="NewItem.Price" class="form-control" placeholder="Price" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" asp-page-handler="AddItem" class="btn btn-primary">Add Item</button>
                            </div>
                        </div>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Equipment</th>
                                    <th>Company</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OfferItems)
                                {
                                    <tr>
                                        <td>@item.Equipment.Name</td>
                                        <td>@item.Company.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                        <td>
                                            <form method="post" style="display: inline;">
                                                <input type="hidden" name="itemId" value="@item.Id" />
                                                <button type="submit" asp-page-handler="DeleteItem" 
                                                        class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this item?')">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>@Model.Offer.TotalPrice.ToString("C")</strong></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            }

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 