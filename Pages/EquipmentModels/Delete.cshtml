@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Equipment Model";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this equipment model?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Equipment</dt>
        <dd class="col-sm-10">@Model.EquipmentModel.Equipment.Name</dd>

        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.EquipmentModel.Brand</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.EquipmentModel.Model</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="EquipmentModel.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 